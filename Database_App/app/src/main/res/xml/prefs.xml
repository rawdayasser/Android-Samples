<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Login information"
        android:summary="Username and Password information">
        <EditTextPreference
            android:title="username"
            android:key="username"
            android:summary="Please enter your login username"
            />
        <EditTextPreference
            android:title="password"
            android:key="password"
            android:summary="Please enter your login password"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="User name Information">
        <CheckBoxPreference
            android:title="keep me login"
            android:key="keep_me_login"
            android:summary="on/off"
            />
        <ListPreference
            android:title="List Preference"
            android:summary="List Preferences Example"
            android:key="list_prefs"
            android:entries="@array/list_options"
            android:entryValues="@array/list_values"
            />
    </PreferenceCategory>
</PreferenceScreen>